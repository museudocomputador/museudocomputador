/*------------------------------------*\
  Base styles
\*------------------------------------*/

@import 'colors';
@import 'helpers';

html,
body {
  margin: 0;
  padding: 0;
}

html {
  font-family: "Open Sans", sans-serif;
  line-height: 1.5;
  overflow-y: scroll;
  min-height: 100%;
  -webkit-text-size-adjust: 100%;
      -ms-text-size-adjust: 100%;
  -moz-osx-font-smoothing: grayscale;
   -webkit-font-smoothing: antialiased;

  @include media($large-desktop) {
    font-size: rem(16);
  }

  @include media($desktop) {
    font-size: rem(16);
  }

  @include media($tablet) {
    font-size: rem(14);
  }

  @include media($mobile) {
    font-size: rem(14);
  }

}

body {
  background: $apple-blah;
  color: $b2;
  @include flex-body;
}

a {
  text-decoration: none;
  color: $b2;
}

ol,
ul {
  list-style: none;
  margin: 0;
  padding: 0;
}

img {
  max-width: 100%;
  height: auto;
}

::-webkit-scrollbar {
  width: 8px;
}

::-webkit-scrollbar-track {
  background: $apple-blah;
}

::-webkit-scrollbar-thumb {
  background: $apple-grey;
}

::-moz-selection {
  background: $apple-grey;
  color: $apple-blah;
}
::selection {
  background: $apple-grey;
  color: $apple-blah;
}

.wrapper {
  @include outer-container;
  padding: 0 em(20);
  @include media($tablet) {
    padding: 0 em(30);
  }
  @include media($mobile) {
    padding: 0 em(30);
  }
}

.main-header {
  background: $apple-grey;
  padding: em(10) 0;
  a {
    color: $apple-white;
  }
}

.site-logo__img {
  fill: $b2;
  @include media($desktop) {
    width: 100px;
    height: 100px;
  }
  @include media($tablet) {
    width: 70px;
    height: 70px;
  }
  @include media($mobile) {
    width: 50px;
    height: 50px;
  }
}

.site-logo__text {
  text-transform: uppercase;
}

.site-nav {

  @include media($mobile) {
    position: absolute;
    left: 0;
    @include transform(translate3d(-100%, 0, 0));
    @include backface-visibility(hidden);
  }
}

main {
  -webkit-box-flex: 1;
  -ms-flex: 1 0 auto;
  flex: 1 0 auto;
  -webkit-flex: 1 0 auto;
}