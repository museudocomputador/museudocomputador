/*------------------------------------*\
  Base styles
\*------------------------------------*/

@import 'colors';
@import 'helpers';

html,
body {
  margin: 0;
  padding: 0;
}

html {
  font-family: "Open Sans", sans-serif;
  line-height: 1.5;
  overflow-y: scroll;
  min-height: 100%;
  -webkit-text-size-adjust: 100%;
      -ms-text-size-adjust: 100%;
  -moz-osx-font-smoothing: grayscale;
   -webkit-font-smoothing: antialiased;

  @include media($large-desktop) {
    font-size: rem(16);
  }

  @include media($desktop) {
    font-size: rem(16);
  }

  @include media($tablet) {
    font-size: rem(14);
  }

  @include media($mobile) {
    font-size: rem(14);
  }

}

body {
  background: $cm-agrey;
  color: $cm-ablue;
  border-top: 2px solid $rebecca;
  @include flex-body;
}

a {
  text-decoration: none;
  color: $cm-ablue;
  @include transition(all 0.2s ease-in-out);
}

ol,
ul {
  list-style: none;
  margin: 0;
  padding: 0;
}

img {
  max-width: 100%;
  height: auto;
}

.wrapper {
  @include outer-container;
  padding: 0 em(20);
  @include media($tablet) {
    padding: 0 em(30);
  }
  @include media($mobile) {
    padding: 0 em(30);
  }
}

.main-footer,
.main-header {
  padding: em(10) 0;
}

.main-header {

}

.main-footer {
  background: $cm-ablue;
  color: $cm-agrey;
  padding: em(10) 0;
  a {
    color: $cm-agrey;
    &:hover {
      color: $cm-blue;
    }
  }
}

.main-footer__copyright {
  text-align: center;
  display: block;
}

.site-logo {

  @include media($desktop) {
    float: left;
  }

}

.site-logo__img {
  fill: $b2;
  @include media($desktop) {
    width: 100px;
    height: 100px;
  }
  @include media($tablet) {
    width: 70px;
    height: 70px;
  }
  @include media($mobile) {
    position: relative;
    top: 2px;
    width: 50px;
    height: 50px;
  }

  &:hover {
    .cx-1,
    .cx-2,
    .cx-3,
    .cx-4 {
      fill: $rebecca;
    }
    .site-logo__p1,
    .site-logo__p2,
    .site-logo__p3,
    .site-logo__p4,
    .site-logo__p5 {
      fill: $cm-ared;
    }
  }
}

.site-logo__text {
  font-weight: 600;
  text-transform: uppercase;
  float: right;
  margin: 25px 0 0 10px;

  @include media($tablet) {
    display: none;
    visibility: hidden;
  }

  @include media($mobile) {
    display: none;
    visibility: hidden;
  }
}

.cx-1 {
  @include transition(all 0.2s ease-in-out);
}

.cx-2 {
  @include transition(all 0.3s ease-in-out);
}

.cx-3 {
  @include transition(all 0.4s ease-in-out);
}

.cx-4 {
  @include transition(all 0.5s ease-in-out);
}

.site-logo__p1 {
  @include transition(all 0.2s ease-in-out);
}

.site-logo__p2 {
  @include transition(all 0.4s ease-in-out);
}

.site-logo__p4 {
  @include transition(all 0.6s ease-in-out);
}

.site-logo__p3 {
  @include transition(all 0.8s ease-in-out);
}

.site-logo__p5 {
  @include transition(all 1s ease-in-out);
}

.site-nav {

  @include media($desktop) {
    float: right;
    vertical-align: middle;
    margin-top: em(35);
  }

  @include media($mobile) {
    position: absolute;
    width: 70%;
    height: 100%;
    left: 0;
    @include transform(translate3d(-100%, 0, 0));
    @include backface-visibility(hidden);
  }

}

.site-nav__item {

  @include media($desktop) {
    display: inline-block;
    margin: 5px 10px;
  }

}

.site-nav__link {
  text-transform: uppercase;
}

.main-content {
  -webkit-box-flex: 1;
  -ms-flex: 1 0 auto;
  flex: 1 0 auto;
  -webkit-flex: 1 0 auto;
  padding: 0 0 em(60) 0;
}