/*------------------------------------*\
  Collection style
\*------------------------------------*/

.collection-item__link {
  position: relative;
  display: block;
  @include transition(all 0.2s ease-in-out);

  @include media($mobile) {
    height: 250px;
    margin-bottom: 20px;
    @include span-columns(4);
    @include omega();
  }

  @include media($tablet) {
    height: 250px;
    margin-bottom: 20px;
    @include span-columns(4);
    @include omega(2n);
  }

  @include media($desktop-x) {
    height: 300px;
    margin-bottom: 20px;
    @include span-columns(4);
    @include omega(3n);
  }
}

.collection-item {
  background: $cm-ared;
  display: block;
  padding: 20px;
  width: 100%;
  height: 100%;
  text-align: center;
  @include transition(all 0.2s ease-in-out);

  &:hover {
    background: lighten($cm-ared, 5);
  }

  .collection-item__title {
    margin-top: 40%;
    color: $cm-white;
    font-weight: 800;
  }

}
