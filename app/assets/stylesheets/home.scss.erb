/*------------------------------------*\
  Home styles
\*------------------------------------*/

//= depend_on_asset "m1/intel.jpg"

.welcome-block {
  position: relative;
  background-image: url(<%= asset_path 'm1/intel.jpg' %>);
  background-size: cover;
  width: 100%;
  background-attachment: fixed;

  @include media($mobile) {
    height: 300px;
  }

  @include media($tablet) {
    height: 300px;
  }

  @include media($desktop-x) {
    height: 500px;
  }
}

.welcome-block__title {
  position: absolute;
  top: 50%;
  left: 50%;
  @include transform(translate(-50%, -50%));
  margin: 0;
  color: $cm-agrey;
  span {
    display: block;
    font-style: italic;
  }

  @include media($mobile) {

  }

  @include media($desktop-x) {
    width: 75%;
    font-size: em(40);
    font-weight: 600;
  }
}

.site-promo {
  padding: em(60) 0;
}

.site-collection,
.site-promo__welcome {
  text-align: center;
}

.site-title__big {
  font-size: em(30);
  font-weight: 400;
  text-transform: uppercase;
}

.btn-more {
  background: $cm-ared;
  color: $cm-agrey;
  border: 2px solid $cm-ared;
  text-transform: uppercase;
  margin: em(10) 0;
  font-weight: 400;
  &:hover {
    background: $cm-agrey;
    color: $cm-ared;
  }
}