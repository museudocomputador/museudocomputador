/*------------------------------------*\
  Home styles
\*------------------------------------*/

//= depend_on_asset "m1/cpus.jpg"

.welcome-block {
  position: relative;
  background-image: url(<%= asset_path 'm1/cpus2.jpg' %>);
  background-size: cover;
  width: 100%;

  @include media($mobile) {
    height: 300px;
  }

  @include media($tablet) {
    height: 300px;
  }

  @include media($desktop-x) {
    height: 500px;
  }
}

.welcome-block__title {
  position: absolute;
  top: 50%;
  left: 50%;
  @include transform(translate(-50%, -50%));
  margin: 0;
  color: $cm-agrey;
  font-weight: 800;
  span {
    display: block;
    font-style: italic;
    font-weight: 400;
  }

  @include media($mobile) {
    width: 75%;
    font-size: em(22);
  }

  @include media($tablet) {
    width: 85%;
    font-size: em(35);
  }

  @include media($desktop-x) {
    width: 75%;
    font-size: em(40);
  }
}

.site-promo,
.site-collection {
  padding: em(90) 0;
}

.site-collection,
.site-promo__welcome {
  text-align: center;
}

.site-title__big {
  font-size: em(30);
  font-weight: 400;
  text-transform: uppercase;
}

.btn-more {
  background: $cm-ared;
  color: $cm-agrey;
  border: 2px solid $cm-ared;
  text-transform: uppercase;
  margin: em(10) 0;
  font-weight: 400;
  &:hover {
    background: $cm-agrey;
    color: $cm-ared;
  }
}

.overlay-bg {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background: $ablack;
}