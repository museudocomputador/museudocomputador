/*------------------------------------*\
  Home styles
\*------------------------------------*/

//= depend_on_asset "m1/intel.jpg"

.welcome-block {
  position: relative;
  background-image: url(<%= asset_path 'm1/intel.jpg' %>);
  background-size: cover;
  width: 100%;

  @include media($desktop-x) {
    background-attachment: fixed;
    height: 500px;
  }
}

.welcome-block__title {
  margin: 0;
  color: $cm-agrey;
  span {
    display: block;
    font-style: italic;
  }

  @include media($desktop-x) {
    position: relative;
    top: em(60);
    font-size: em(40);
    font-weight: 600;
  }
}

.site-promo {
  padding: em(60) 0;
}

.site-promo__welcome {
  text-align: center;
}

.site-promo__title {
  font-size: em(30);
  font-weight: 400;
  text-transform: uppercase;
}

.btn-more {
  background: $cm-ared;
  color: $cm-agrey;
  border: 1px solid $cm-ared;
  text-transform: uppercase;
  margin: em(10) 0;
  &:hover {
    background: $cm-agrey;
    color: $cm-ared;
  }
}