<div class="wrapper">

  <div class="collection-wrapper__inner">

    <section class="content-area collection-area">
      <h1 class="area-title collection-area__title">Acervo</h1>

      <div class="collection-container" id="collection-container">

        <% @collections.each do |collection| %>
        <article class="collection-item">
          <figure class="collection-item__figure">
            <%= image_tag "/assets/#{collection.img}", :class => "collection-item__img img-#{collection.title.downcase}" %>
            <figcaption><%= collection.description %></figcaption>
          </figure>
        </article>
        <% end %>

      </div>

    </section>

  </div>

</div>